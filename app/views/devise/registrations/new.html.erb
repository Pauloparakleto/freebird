<div class="container">
  <div class="row">
    <div class="col-xs-offset-3 col-xs-6">
      <div class="text-center">

      <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name, label: "Primeiro nome" %>
          <%= f.input :last_name, label: "Último nome" %>
          <%= f.input :phone, label: "Telefone" %>
          <%= f.input :city, label: "Cidade" %>
          <%= f.input :state, label: "Estado" %>
          <%= f.label "Selecione caso você seja um artista" %><br>
          <%= f.check_box :artist %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      label: "Senha",
                      required: true,
                      hint: ("#{@minimum_password_length} caracteres mínimos" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      label: "Confirme sua senha",
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Registrar" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

