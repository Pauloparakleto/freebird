<div class="container text-center">
  <% @events.each do |event| %>
    <p>Projeto: <%= event.project.name %></p>
    <p>Data: <%= event.datetime %></p>
    <p>Quem eu contratei: <%= event.project.artist.first_name %> <%= event.project.artist.last_name %>

    <p>Aceito?</p>
    <% if event.accepted == true %>
      <p><i class="fas fa-check"></i><%= "  #{event.project.artist.first_name}" %> aceitou sua proposta</p>

      <!-- Botao aceitar proposta -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Contacte <%= "#{event.project.artist.first_name}" %>
      </button>

      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel"><%= "Informaçōes de #{event.project.artist.first_name}" %></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <%= cl_image_tag event.project.artist.photo, height: 64, width: 64 %>
              <p><i class="fas fa-user"></i><%=  " #{event.project.artist.first_name}  #{event.project.artist.last_name}" %></p>
              <p><i class="fas fa-mobile-alt"></i><%= " #{event.project.artist.phone}" %></p>
              <p><i class="fas fa-envelope"></i><%= " #{event.project.artist.email}" %></p>
              <p><i class="fas fa-home"></i><%= " #{event.project.artist.city}" %></p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <p><i class="fas fa-times-circle"></i><%= "  #{event.project.artist.first_name} ainda não aceitou sua proposta" %></p>
    <% end %>

    <!-- <% if current_user == event.project.artist %>
      <% link_to "Aceitar proposta" do %>
        <% event.accepted = true %>
      <% end %>
    <% end %> -->

  <% end %>
</div>

