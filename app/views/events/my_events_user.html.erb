<div class="container text-center">
  <% @events.each do |event| %>
    <p>Projeto: <%= event.project.name %></p>
    <p>Data: <%= event.datetime %></p>
    <p>Quem eu contratei: <%= event.project.artist.first_name %> <%= event.project.artist.last_name %>

    <p>Aceitado?</p>
    <% if event.accepted == true %>
      <p>Aceito</p>
      <%= link_to "Contacte #{event.project.artist.first_name}", "#", class: "btn btn-primary" %>
    <% else %>
      <p><%= "#{event.project.artist.first_name} ainda nÃ£o aceitou sua proposta" %></p>
    <% end %>

    <!-- <% if current_user == event.project.artist %>
      <% link_to "Aceitar proposta" do %>
        <% event.accepted = true %>
      <% end %>
    <% end %> -->

  <% end %>
</div>
