<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/811838/pexels-photo-811838.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940');">
  <div class="banner-content">
    <h1>Freebird</h1>
    <p>Find people</p>
  </div>
  <div class="search">
    <%= form_tag(search_path, method: :get) do %>
      <div class="input-group">
        <%= search_field_tag :search_name, params[:search_name], placeholder: "name", class: "form-control" %>
        <%= search_field_tag :search_city, params[:search_city], placeholder: "City", class: "form-control" %>
        <div class="input-group-btn">
          <%= button_tag "", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="btn-light"><i class="fas fa-play"></i></div>
<br>
<div class="btn-solid"><i class="fas fa-play"></i></div>
