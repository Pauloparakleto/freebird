<div class="container">
  <%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs form-new-project">
    <%#=  missing genre and category! %>
    <%= f.input :name, label: "Nome" %>
    <%= f.input :description, label: "Descrição" %>
    <%= f.input :city, label: "Cidade" %>
    <%= f.input :state, label: "Estado" %>
    <%= f.input :video %>
    <%= f.input :price, label: "Preço por hora" %>
    <%#= f.input :photo_cache, as: :hidden %>
    <!-- association pulls categories as dropdown and genres as checkbox to form -->
    <%= f.association :category, label: "Categoria" %>
    <%= f.association :genres, label: "Gênero", as: :check_boxes %>
  </div>

    <!-- added button for user to add a photo -->
  <div class="add-photo">
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Enviar" %>
  </div>


  <% end %>
</div>
