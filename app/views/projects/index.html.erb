<div class="container text-center">

  <% if user_signed_in? %>
  <% if current_user.artist == true %>
  <%= link_to "Crie seu projeto", new_project_path, class: "btn btn-primary" %>
  <% end %>
  <% end %>

<div class="polaroid-images">
  <% @projects.each do |project| %>
    <%= link_to project_path(project) do %>
      <a href=""><img height="200" src="assets/freddie.jpg" alt="test" title="test" /><%= project.name %>
        <p><i class="fas fa-music"> <%= project.genres.name %></i></p></a>
    <% end %>
  <% end %>
</div>
