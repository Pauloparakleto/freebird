     <a href="#tab-1">Aba1</a>
<section class="tab-content"> Conteúdo da Aba 1 </section></li>
<!-- Aqui, criação da segunda aba -->
    <li class="tab" id="tab-2">
     <a href="#tab-2">Aba 2</a>
<section class="tab-content"> Conteúdo da Aba 2 </section></li>
<!-- Aqui, criação da terceira aba -->
    <li class="tab" id="tab-3">
     <a href="#tab-3">Aba 3</a>
<section class="tab-content"> Conteúdo da Aba 3 </section></li>
</ul>
<div class="container">
      <% @project.each do |project| %>
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <%= link_to project_path(project) do %>
      <%= cl_image_tag project.photo, height: 200, width: 250, crop: :fill %>
      <% end %>
      <h2><%= project.name %></h2>
      <p><i class="fas fa-microphone-alt"></i>
        <%= project.category.name %>
        <i class="fas fa-map-marker-alt"></i>
        <%= project.city %>, <%= project.state %>
      </p>
      <p>
        <i class="fas fa-music"></i>
        <% project.genres.each do |t| %>
        <%= t.name %>
        <% end %>
      </p>
    </div>
    <div class="col-xs-12 col-md-6">
      <h2>Meus Eventos</h2>
      <% project.events.each do |e| %>
      <ul>
        <li><%= e.datetime %></li>
        <li><%= e.description %></li>
        <li><%= e.accepted %></li>
        <li><%= e.user.first_name %></li>
      </ul>
      <%= cl_image_tag e.user.photo, class: "user-avatar-sm" %>
      <% end %>
    </div>

    <div class="col-xs-12 col-md-6">
      <h2>Minhas perguntas:</h2>
      <% project.anonymous_messages.each do |m| %>
      <p><%= m.question %></p>
      <p><%= m.answer %></p>
      <% end %>
    </div>

  </div>
      <% end %>
</div>


