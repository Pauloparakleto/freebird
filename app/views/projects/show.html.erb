<div class="container text-center">
  <h1><%= @project[:artistic_name] %></h1>
  <p>Descrição: <%= @project[:description] %></p>
  <p>Gênero: <%= @project[:genre] %></p>
  <p>Formato: <%= @project[:band_format] %></p>
  <p>Cidade: <%= @project[:city] %></p>
  <%= @project[:photo] %>
  <%= @project[:video] %>

  <% @project.reviews.each do |review| %>
  <p><%= review.content %></p>
  <% end %>

  <%= link_to "Criar novo review", new_project_review_path(@project) %>
  <%= link_to "Editar", edit_project_path(@project) %>
  <%= link_to "Contratar", new_project_event_path(@project) %>
</div>
