<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <div class="form-new-review">

      <h1 class="review-title">Crie um novo review</h1>

      <%= simple_form_for [@project, @review] do |f| %>
        <%= f.input :content, label: false, placeholder: "Escreva seu review" %>
        <%= f.input :rate, label: "Nota", :as => :radio_buttons, :item_wrapper_class => 'inline', :collection => (1..5), :class => "form-control no-border" %>
        <%= f.submit "Adicionar review", class: "btn btn-primary submit-review" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
