<div class="navbar-search">
  <div class="search">
    <%= form_tag(search_path, class: 'form-inline' , method: :get) do %>
    <div class="input-group">
      <%= search_field_tag :search_name, params[:search_name], placeholder: "name", class: "form-control" %>
    </div>
    <div class="input-group">
      <%= search_field_tag :search_city, params[:search_city], placeholder: "City", class: "form-control" %>
    </div>
    <div class="input-group">
      <%= button_tag "", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>
    </div>
    <% end %>
  </div>
</div>
